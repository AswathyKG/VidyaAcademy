<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardview_forAdmin_pr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/recy_img"
    android:layout_margin="10dp"
    android:background="@drawable/bgcard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_logindup">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">


            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#A71106">

            </View>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_card_photo_admin_pr"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_weight=".1"
                android:background="@drawable/ic_person_black_24dp"
                app:civ_border_color="#cccccc"
                app:civ_border_width="2dp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="104dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp">


                <TextView
                    android:id="@+id/tv_card_name_admin_pr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_toRightOf="@+id/iv_card_photo"
                    android:text="Admin Name"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_princi_card_read_more_pr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_card_name_admin"
                    android:layout_margin="7dp"
                    android:layout_toRightOf="@+id/iv_card_photo_admin"
                    android:text="Read More..."
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight=".9"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/ib_edit_AdminList_pr"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/edit"
                    android:padding="5dp" />
            </LinearLayout>

            <!-- <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_marginBottom="5dp"
                 android:layout_weight=".9"
                 android:gravity="center">

                 <ImageButton
                     android:id="@+id/ib_delete_AdminList"
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:layout_gravity="bottom"
                     android:background="@drawable/delete"
                     android:padding="5dp" />
             </LinearLayout>-->

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>