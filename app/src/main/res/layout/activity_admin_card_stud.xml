<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="10dp"
    android:elevation="3dp"
    android:id="@+id/cardview_forStudent"
    android:layout_below="@+id/recy_img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_student_photo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/bg"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#cccccc"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="104dp"
                android:layout_weight="2.8"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp">


                <TextView
                    android:id="@+id/tv_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_toRightOf="@+id/iv_card_photo"
                    android:text="Student Name"
                    android:textColor="#000"
                    android:textSize="16sp" />

               <!-- <TextView
                    android:id="@+id/tv_card_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_card_name"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/iv_card_photo"
                    android:text="Register no:"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:textStyle="italic" />-->
                <TextView
                    android:id="@+id/tv_card_reg_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_card_name"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/iv_card_photo"
                    android:text="Register no:"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:textStyle="italic" />


                <TextView
                    android:id="@+id/tv_card__grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_card_reg_no"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/iv_card_photo"
                    android:text="Total Grade"
                    android:textColor="#000" />


                <TextView
                    android:id="@+id/tv_card_read_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_card__grade"
                    android:layout_margin="7dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_toRightOf="@+id/iv_card_photo"
                    android:text="Read More..."
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>