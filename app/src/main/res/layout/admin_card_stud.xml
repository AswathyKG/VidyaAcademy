<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_margin="10dp"
    android:elevation="3dp"
    android:id="@+id/cardview_forStudent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_card_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
             />

        <TextView
            android:id="@+id/tv_card_name"
            android:text="Student Name"
            android:textSize="16sp"
            android:layout_margin="7dp"
            android:textColor="@android:color/darker_gray"
            android:layout_toRightOf="@+id/iv_card_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_card_reg_no"
            android:text="Register no:"
            android:textSize="13sp"
            android:layout_marginLeft="7dp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="italic"
            android:layout_below="@+id/tv_card_name"
            android:layout_toRightOf="@+id/iv_card_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/iv_card_photo"
            android:layout_below="@id/tv_card_reg_no"
            android:text="Total Grade"
            android:id="@+id/tv_card__grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





        <TextView
            android:id="@+id/tv_card_read_more"
            android:text="Read More..."
            android:layout_margin="7dp"
            android:textAllCaps="false"
            android:textStyle="italic"
            android:layout_below="@+id/tv_card__grade"
            android:layout_toRightOf="@+id/iv_card_photo"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
   </RelativeLayout>
</android.support.v7.widget.CardView>

